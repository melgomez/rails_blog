<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <%= form_with(model: user, local: true) do |form| %>
      <div class="form-group row">
        <%= form.label :username, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= form.text_field :username, class: "form-control", placeholder: "Username" %>
        </div>
      </div>
      <div class="form-group row">
        <%= form.label :email, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= form.text_field :email, class: "form-control", placeholder: "email@example.com" %>
        </div>
      </div>
      <div class="form-group row">
        <%= form.label :password, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= form.password_field :password, class: "form-control"  %>
        </div>
      </div>
      <%= form.submit "Sign Up", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
