<h1>Log in</h1>
<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url:login_path) do |form| %>
  <div class="form-group row">
    <%= form.label :email, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.email_field :email, class: "form-control", placeholder: "Enter email" %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :password, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.password_field :password, class: "form-control", autocomplete: "off" %>
    </div>
  </div>
  <%= form.submit "Log in", class: "btn btn-primary" %>
<% end %>
